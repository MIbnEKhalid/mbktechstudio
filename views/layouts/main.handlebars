            --dark: #101c1c;
            --darker: #0a1414;
            --light: #eaf6fb;
            --text: #e0f7fa;
            --text-light: #b2dfdb;
            --text-dark: #1a2a2a;
            --success: #43e97b;
            --warning: #ffd166;
            --danger: #ff7675;
            --border-radius: 8px;
            --box-shadow: 0 4px 20px rgba(33, 150, 243, 0.15);
            --transition: all 0.3s cubic-bezier(.4, 0, .2, 1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: var(--dark);
            color: var(--text);
